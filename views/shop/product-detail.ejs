<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <div class="grid">
            <article class="card product-item">
                <header class="card__header">
                    <h1 style= " color: rgb(9, 9, 109)" style= "text-align: center" class="product__title"><%= product.title %></h1>
                </header>
                <div class="card__image">
                    <img  src="/images/<%= product.imageUrl %>" class="responsive-img">
                </div>
                <div class="card__content">
                    <h2 style= " color: rgb(9, 9, 109)" class="product__price"><%= product.price %></h2>
                    <p class="product__description"><%= product.description %></p>
                </div>
                <div class="card__actions">
                    <button class="btn btn-info">Add to Cart</button>
                </div>
            </article>
        </div>
    </main>



    <%- include('../includes/end.ejs') %>






    