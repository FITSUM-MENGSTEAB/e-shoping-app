<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('includes/navigation.ejs') %>
    <main>
        <% if (prods.length > 0) { %>
        <div class="grid">
            <% for (let product of prods) { %>
            <article class="card product-item">
                <header class="card mb-3">
                    <h2 style= " color: rgb(9, 9, 109)" style= "text-align: center" class="product-title"><%= product.title %></h2>
                </header>
                <div class="card__image">
                    <img style="height: 200px; width: 100%; display: block;" src="/images/<%= product.imageUrl %>" class="responsive-img">
                </div>
                <div class="card__content">
                    <h2 class="product__price"><%= product.price %></h2>
                    <p class="product__description"><%= product.description %></p>
                </div>
              
                </div>
            </article>
            <% } %>
        </div>
        <% } else { %>
        <h1>No Products Found!</h1>
        <% } %>
    </main>

    <%- include('includes/end.ejs') %>